<Alloy>
	<View layout="horizontal" height="Ti.UI.SIZE" width="Ti.UI.SIZE" top="10">
		<View height="Ti.UI.SIZE" width="Ti.UI.SIZE">
			<ScrollView id="count" layout="vertical" height="90" width="90" scrollingEnabled="false" backgroundColor="#ddd" borderRadius="5">
		        <Label class="number" text="" height="80"/>
